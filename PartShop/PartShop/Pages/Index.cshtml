@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vehicle Parts Shop</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>
    <!-- Nav bar -->
    <nav class="navbar">
        <a class="nav-link" href="#">Advanced Search</a>
        <a class="nav-link" href="#">Contact</a>
        <a class="nav-link" href="#">About Us</a>
    </nav>

    <!-- Logo & title -->
    <div class="container">
        <img class="logo" src="../assets/images/logo.png" alt="Logo">
        <h1 class="title">Vehicle Parts Shop</h1>
    </div>

    <style>
        .container {
            max-width: 1920px;
            margin: 0 auto;
            padding: 20px;
        }
    </style>

    <!-- Search bar -->
    <form class="search-form">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for products" aria-label="Search" aria-describedby="button-addon2">
            <button class="btn btn-primary" type="button" id="button-addon2">Search</button>
        </div>
    </form>

    <!-- Product Gallery -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Product Gallery</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="gallery-item">
                    <img src="../assets/product1.jpg" alt="Product 1">
                </div>
            </div>
            <div class="col-md-3">
                <div class="gallery-item">
                    <img src="../assets/product2.jpg" alt="Product 2">
                </div>
            </div>
            <div class="col-md-3">
                <div class="gallery-item">
                    <img src="../assets/product3.jpg" alt="Product 3">
                </div>
            </div>
            <div class="col-md-3">
                <div class="gallery-item">
                    <img src="../assets/product4.jpg" alt="Product 4">
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>&copy; 2023 Vehicle Parts Shop. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

</body>

<style>
        /* Minimalistic design with white and blue as primary colors */
        body {
            background: url("") no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            max-width: auto;
            margin: 0 auto;
            padding: 20px;
        }
    
        h1 {
            color: #0080ff;
            text-align: center;
            margin-bottom: 30px;
        }
    
        form {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 50px;
        }
    
        input[type=text] {
            padding: 10px;
            border-radius: 5px 0 0 5px;
            outline: none;
        }
    
        button[type=submit] {
            padding: 19px;
            background-color: #0080ff;
            color: white;
            border: none;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }
    
        button[type=submit]:hover {
            background-color: #005c99;
        }
    
        /* Navigation bar styles */
        .navbar {
            overflow: hidden;
            background-color: #0080ff;
            font-family: Arial, sans-serif;
        }

        .navbar a {
            float: left;
            font-size: 16px;
            color: white;
            text-align: center;
            padding: 5px 10px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #005c99;
        }

        nav {
          display: flex;
          justify-content: flex-start;
          align-items: center;
        }


        /* Title styles */
        .title {
            color: #0080ff;
            text-align: center;
            margin-bottom: 30px;
            font-size: 36px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        /* Logo styles */
        .logo {
            display: block;
            margin: 0 auto;
            max-width: 200px;
            margin-bottom: 20px;
        }

        /* Gallery styles */
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 10px;
            
        }
        .gallery-item {
            margin: 10px;
            padding: 15px;
        }
        .gallery-item img {
            max-width: 400px;
            max-height: 300px;
            height: auto;
            transition: transform 0.3s ease-in-out;
            padding: 50px;
            justify-content: space-evenly;
        }
        .gallery-item img:hover {
            transform: scale(1.1);
        }
    </style>
</html>


