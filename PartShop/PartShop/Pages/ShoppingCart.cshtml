@page
@model ShoppingCartModel;
@{
    ViewData["Title"] = "ShoppingCart";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vehicle Parts Shop</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

 
</head>

<body>

	
		<div class="ShoppingCart">
        <div class="card-header">
            <p class="lead" style="align-self:center;">My order - Total: RD@($"{Model.Venta.TotalCosto:c}")</p>
        </div>
			<div class="col-md-18">
                <div class="row mt-5">
                    @if (Model.Venta.DetalleVenta.Count > 0)
                    {
                        @foreach (var detalleVenta in Model.Venta.DetalleVenta)
                        {
                            <div class="col-3">
                                <div class="card">
                                    <br/>
                                    <div class="card">
                                        <div class="card-header">
                                            <p class="text-center font-weight-bold">@detalleVenta.IdProductoNavigation.Nombre</p>
                                            <p><strong>Quantity:</strong> @detalleVenta.Cantidad</p>
                                            <p><strong>Price:</strong> @detalleVenta.PrecioUnidad</p>
                                        </div>

                                        <div class="card-body text-center">
                                        <img src="../assets/product4.jpg" class="card-img-fluid" style="width: 8rem; height: 6rem" alt="...">
                                        </div>
                                        @*<div class="card-footer">
                                            <button type="button" class="btn btn-outline-danger btn-sm">Remove from cart</button>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>
                            Your cart is empty.
                        </h1>
                    }
                </div>
            <div class="row mt-5">
                <div class="col-12">
                    <h3>Total: RD@($"{Model.Venta.TotalCosto:c}")</h3>
                </div>
            </div>

            </div>
		 
	</div>
   
	<!-- CHECKOUT -->
    @if (Model.Venta.DetalleVenta.Count > 0)
    {
        <div class="checkout">
            <br/>
            <form method="post">
                <div class="d-grid gap-2">
                    <input type="hidden" asp-for="IdVenta"/>
                    <button class="btn btn-outline-success" type="submit">Realizar Pago</button>
                </div>
            </form>
        </div>
    }

</body>

<style>
        /* Minimalistic design with white and blue as primary colors */
	
		.container {
            max-width: 1920px;
            margin: 0 auto;
            padding: 20px;
        }
	
        body {
            background: url("") no-repeat center center fixed;
            background-size: cover;
        }
    
        h1 {
            color: #0080ff;
            text-align: center;
            margin-bottom: 30px;
        }
    
        /* Navigation bar styles */
        .navbar {
            overflow: hidden;
            background-color: #0080ff;
            font-family: Arial, sans-serif;
        }

        .navbar a {
            float: left;
            font-size: 16px;
            color: white;
            text-align: center;
            padding: 5px 10px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #005c99;
        }

        nav {
          display: flex;
          justify-content: flex-start;
          align-items: center;
        }


        /* Title styles */
        .title {
            color: #0080ff;
            text-align: center;
            margin-bottom: 30px;
            font-size: 36px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        /* Logo styles */
        .logo {
            display: block;
            margin: 0 auto;
            max-width: 200px;
            margin-bottom: 20px;
        }
		.pusher{
			margin-left: 70%;
		}
	
		#cart {
		  width: 100%;
		  border-collapse: collapse;
		}

		#cart th, #cart td {
		  border: 1px solid black;
		  padding: 5px;
		  text-align: center;
		}

		#products li {
		  cursor: pointer;
		  margin-bottom: 5px;
		}
	
	.button{
		background-color: #0B64B7;
		color: #FFFFFF;
		padding: 15px;
		font-size:15px;
		margin-left: 93%;	
	}
	
	#cartTitle{
		color: #0080FF;
	}

    </style>
</html>
